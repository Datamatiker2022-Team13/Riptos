<Window x:Class="Whistleblower.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Whistleblower"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <Label Content="UserName" HorizontalAlignment="Left" Margin="361,104,0,0" VerticalAlignment="Top"/>
        <Button x:Name="bntLogin" Content="Login" HorizontalAlignment="Left" Margin="367,303,0,0" VerticalAlignment="Top" Click="bntLogin_Click"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="361,199,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Margin="361,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="361,230,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
